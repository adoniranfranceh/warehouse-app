<!DOCTYPE html>
<html>
  <head>
    <title>WarehouseApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
  </head>
  <body>
    <header>
      <%= link_to root_path do %>
        <h1>Galp√µes & Estoque</h1>
      <% end %>
      <nav>
        <%= link_to 'Fornecedores', suppliers_path %> | 
        <%= link_to 'Modelos de Produto', product_models_path %> | 
        <%= link_to 'Cadastrar pedido', new_order_path %>
        <% if user_signed_in? %>
          <%= form_with(url: search_orders_path, method: :get) do |f| %>
            <%= f.label :query, 'Buscar Pedidos'%>
            <%= f.text_field :query %>
            <%= f.submit 'Buscar' %>
          <% end %>
          <%= current_user.description %> | 
          <%= button_to 'Sair', destroy_user_session_path, method: :delete %>
        <% else %>
          <%= link_to 'Entrar', new_user_session_path %>
        <% end %>
      </nav>
    </header>
    <main>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </main>
  </body>
</html>
