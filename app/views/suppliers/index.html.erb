<h1>Fornecedores</h1>

<% if @suppliers.any? %>
  <table>
  	<thead>
  		<tr>
  			<td>Nome</td>
  			<td>Localização</td>
  		</tr>
  	</thead>
  	<tbody>
  		<% @suppliers.each do |supplier| %>
  		<tr>
  			<td><%= link_to supplier.brand_name, supplier %></td>
  			<td><%= supplier.city %> - <%= supplier.state %></td>
  		</tr>
  		<% end %>
  	</tbody>
  </table>
<% else %>
  <p>Não existem fornecedores cadastrados.</p>
<% end %>

<%= link_to 'Cadastrar Fornecedor', new_supplier_path %>
